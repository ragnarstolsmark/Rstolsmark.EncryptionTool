<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.2</TargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Rstolsmark.EncryptionTool</PackageId>
    <Version>1.0.0</Version>
    <Authors>ragnarstolsmark</Authors>
    <Company>Rstolsmark</Company>
    <Description>A .NET global tool for encrypting and decrypting strings with AES using Rstolsmark.EncryptionLib.</Description>
    <PackageTags>encryption;encrypt;decrypt;AES;tool;Rstolsmark.EncryptionLib</PackageTags>
    <RepositoryUrl>https://github.com/ragnarstolsmark/Rstolsmark.EncryptionTool</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>encryptiontool</ToolCommandName>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Rstolsmark.EncryptionLib" Version="1.0.0" />
  </ItemGroup>

</Project>
